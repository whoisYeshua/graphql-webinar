{
	"$schema": "https://openapi.vercel.sh/vercel.json",
	"cleanUrls": true,
	"trailingSlash": false,
	"outputDirectory": "dist",
	"functions": {
		"api/graphql.ts": {
			"includeFiles": "**/*.gql"
		}
	},
	"redirects": [
    {
      "source": "/((?!graphql).*)",
      "destination": "/graphql",
      "permanent": true
    }
  ],
	"rewrites": [
		{
			"source": "/graphql",
			"destination": "/api/graphql"
		}
	]
}
